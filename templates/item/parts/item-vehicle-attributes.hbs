<div class="form-group">
  <label>{{localize "CWN.Type"}}</label>
  <div class="form-fields">
    <input type="text" name="system.type" value="{{system.type}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Armor"}}</label>
  <div class="form-fields">
    <input type="number" name="system.armor" value="{{system.armor}}" min="0" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.HP"}}</label>
  <div class="form-fields">
    <input type="number" name="system.hp.value" value="{{system.hp.value}}" min="0" />
    /
    <input type="number" name="system.hp.max" value="{{system.hp.max}}" min="0" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Speed"}}</label>
  <div class="form-fields">
    <input type="text" name="system.speed" value="{{system.speed}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Crew"}}</label>
  <div class="form-fields">
    <input type="text" name="system.crew" value="{{system.crew}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Price"}}</label>
  <div class="form-fields">
    <input type="text" name="system.price" value="{{system.price}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Tags"}}</label>
  <div class="form-fields tag-list">
    {{#each system.tags as |tag index|}}
    <div class="tag-entry">
      <input type="text" name="system.tags.{{index}}" value="{{tag}}" />
      <a class="tag-delete" data-index="{{index}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
    <a class="tag-add"><i class="fas fa-plus"></i> {{localize "Add Tag"}}</a>
  </div>
</div> 