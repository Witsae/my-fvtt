<div class="form-group">
  <label>{{localize "CWN.Level"}}</label>
  <input type="number" name="system.level" value="{{system.level}}" data-dtype="Number" min="0" max="6"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Attribute"}}</label>
  <select name="system.attribute">
    {{#select system.attribute}}
    {{#each attributes as |label key|}}
    <option value="{{key}}">{{localize label}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>

<div class="form-group">
  <label>{{localize "CWN.SkillCategory"}}</label>
  <select name="system.category">
    {{#select system.category}}
    {{#each skillCategories as |label key|}}
    <option value="{{key}}">{{localize label}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>

<div class="form-group">
  <label>{{localize "CWN.SkillSpecialty"}}</label>
  <input type="text" name="system.specialty" value="{{system.specialty}}" data-dtype="String"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Source"}}</label>
  <div class="form-fields">
    <input type="text" name="system.source" value="{{system.source}}" />
  </div>
</div> 