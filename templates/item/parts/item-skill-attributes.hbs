<div class="form-group">
  <label>{{localize "CWN.Level"}}</label>
  <div class="form-fields">
    <input type="number" name="system.level" value="{{system.level}}" min="0" max="5" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "Attribute"}}</label>
  <div class="form-fields">
    <select name="system.attribute">
      {{#select system.attribute}}
      <option value="none">{{localize "None"}}</option>
      {{#each config.attributes as |name key|}}
      <option value="{{key}}">{{localize name}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
</div>

<div class="form-group">
  <label>{{localize "Category"}}</label>
  <div class="form-fields">
    <select name="system.category">
      {{#select system.category}}
      {{#each config.skillCategories as |name key|}}
      <option value="{{key}}">{{localize name}}</option>
      {{/each}}
      {{/select}}
    </select>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Source"}}</label>
  <div class="form-fields">
    <input type="text" name="system.source" value="{{system.source}}" />
  </div>
</div> 