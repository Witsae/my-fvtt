<div class="form-group">
  <label>{{localize "CWN.Duration"}}</label>
  <input type="text" name="system.duration" value="{{system.duration}}" data-dtype="String"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.DrugType"}}</label>
  <select name="system.type">
    {{#select system.type}}
    {{#each drugTypes as |label key|}}
    <option value="{{key}}">{{localize label}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>

<div class="form-group">
  <label>{{localize "CWN.Quantity"}}</label>
  <input type="number" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Effect"}}</label>
  <div class="form-fields">
    <textarea name="system.effect" rows="3">{{system.effect}}</textarea>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.SideEffect"}}</label>
  <div class="form-fields">
    <textarea name="system.sideEffect" rows="3">{{system.sideEffect}}</textarea>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Overdose"}}</label>
  <div class="form-fields">
    <textarea name="system.overdose" rows="3">{{system.overdose}}</textarea>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Price"}}</label>
  <input type="number" name="system.price" value="{{system.price}}" data-dtype="Number"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Tags"}}</label>
  <div class="tags-container">
    {{#each system.tags as |tag tagIndex|}}
    <div class="tag">
      <span class="tag-text">{{tag}}</span>
      <a class="tag-delete" data-tag-index="{{tagIndex}}"><i class="fas fa-times"></i></a>
    </div>
    {{/each}}
    <div class="tag-input-container">
      <input type="text" class="tag-input" placeholder="{{localize 'CWN.AddTag'}}"/>
      <button type="button" class="tag-add"><i class="fas fa-plus"></i></button>
    </div>
  </div>
</div> 