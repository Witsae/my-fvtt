<div class="form-group">
  <label>{{localize "CWN.Duration"}}</label>
  <div class="form-fields">
    <input type="text" name="system.duration" value="{{system.duration}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Effect"}}</label>
  <div class="form-fields">
    <textarea name="system.effect" rows="3">{{system.effect}}</textarea>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.SideEffect"}}</label>
  <div class="form-fields">
    <textarea name="system.sideEffect" rows="3">{{system.sideEffect}}</textarea>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Overdose"}}</label>
  <div class="form-fields">
    <textarea name="system.overdose" rows="3">{{system.overdose}}</textarea>
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Price"}}</label>
  <div class="form-fields">
    <input type="text" name="system.price" value="{{system.price}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Tags"}}</label>
  <div class="form-fields tag-list">
    {{#each system.tags as |tag index|}}
    <div class="tag-entry">
      <input type="text" name="system.tags.{{index}}" value="{{tag}}" />
      <a class="tag-delete" data-index="{{index}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
    <a class="tag-add"><i class="fas fa-plus"></i> {{localize "Add Tag"}}</a>
  </div>
</div> 