{{!-- 아이템 효과 관리 --}}
<section class="item-effects">
  <header class="effects-header flexrow">
    <h3 class="item-section">{{localize "CWN.Effects"}}</h3>
    <div class="item-controls">
      <a class="effect-control" data-action="create" title="{{localize 'CWN.EffectCreate'}}">
        <i class="fas fa-plus"></i> {{localize "CWN.Add"}}
      </a>
    </div>
  </header>

  <ol class="items-list effects-list">
    {{#each effects as |section sid|}}
      {{#unless section.hidden}}
      <li class="items-header flexrow" data-effect-type="{{section.type}}">
        <h3 class="item-name effect-name flexrow">{{section.label}}</h3>
        <div class="effect-source">{{localize "CWN.Source"}}</div>
        <div class="effect-duration">{{localize "CWN.Duration"}}</div>
        <div class="item-controls effect-controls flexrow">
          <a class="effect-control" data-action="create" title="{{localize 'CWN.EffectCreate'}}">
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </li>

      <ol class="item-list">
      {{#each section.effects as |effect|}}
        <li class="item effect flexrow" data-effect-id="{{effect.id}}">
          <div class="item-name effect-name flexrow">
            <img class="item-image" src="{{effect.icon}}"/>
            <h4>{{effect.label}}</h4>
          </div>
          <div class="effect-source">{{effect.sourceName}}</div>
          <div class="effect-duration">{{effect.duration.label}}</div>
          <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="toggle" title="{{localize 'CWN.EffectToggle'}}">
              <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
            </a>
            <a class="effect-control" data-action="edit" title="{{localize 'CWN.EffectEdit'}}">
              <i class="fas fa-edit"></i>
            </a>
            <a class="effect-control" data-action="delete" title="{{localize 'CWN.EffectDelete'}}">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </li>
      {{/each}}
      </ol>
      {{/unless}}
    {{/each}}
  </ol>
</section> 