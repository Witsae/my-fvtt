<div class="form-group">
  <label>{{localize "CWN.Type"}}</label>
  <div class="form-fields">
    <input type="text" name="system.type" value="{{system.type}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Quantity"}}</label>
  <input type="number" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Weight"}}</label>
  <input type="number" name="system.weight" value="{{system.weight}}" data-dtype="Number" step="0.1"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Price"}}</label>
  <input type="number" name="system.price" value="{{system.price}}" data-dtype="Number"/>
</div>

<div class="form-group">
  <label>{{localize "CWN.Location"}}</label>
  <select name="system.location">
    {{#select system.location}}
    {{#each itemLocations as |label key|}}
    <option value="{{key}}">{{localize label}}</option>
    {{/each}}
    {{/select}}
  </select>
</div>

<div class="form-group">
  <label>{{localize "CWN.Tags"}}</label>
  <div class="tags-container">
    {{#each system.tags as |tag tagIndex|}}
    <div class="tag">
      <span class="tag-text">{{tag}}</span>
      <a class="tag-delete" data-tag-index="{{tagIndex}}"><i class="fas fa-times"></i></a>
    </div>
    {{/each}}
    <div class="tag-input-container">
      <input type="text" class="tag-input" placeholder="{{localize 'CWN.AddTag'}}"/>
      <button type="button" class="tag-add"><i class="fas fa-plus"></i></button>
    </div>
  </div>
</div> 