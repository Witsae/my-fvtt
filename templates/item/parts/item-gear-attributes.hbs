<div class="form-group">
  <label>{{localize "CWN.Type"}}</label>
  <div class="form-fields">
    <input type="text" name="system.type" value="{{system.type}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Quantity"}}</label>
  <div class="form-fields">
    <input type="number" name="system.quantity" value="{{system.quantity}}" min="0" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Weight"}}</label>
  <div class="form-fields">
    <input type="text" name="system.weight" value="{{system.weight}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Price"}}</label>
  <div class="form-fields">
    <input type="text" name="system.price" value="{{system.price}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Location"}}</label>
  <div class="form-fields">
    <input type="text" name="system.location" value="{{system.location}}" />
  </div>
</div>

<div class="form-group">
  <label>{{localize "CWN.Tags"}}</label>
  <div class="form-fields tag-list">
    {{#each system.tags as |tag index|}}
    <div class="tag-entry">
      <input type="text" name="system.tags.{{index}}" value="{{tag}}" />
      <a class="tag-delete" data-index="{{index}}"><i class="fas fa-trash"></i></a>
    </div>
    {{/each}}
    <a class="tag-add"><i class="fas fa-plus"></i> {{localize "Add Tag"}}</a>
  </div>
</div> 